{
  "schemaVersion": 1,
  "id": "virtual_additions",
  "version": "${version}",

  "name": "Virtual Additions",
  "description": "A sizable content mod with a strong focus on preserving the vanilla feel.",
  "authors": [
    "VirtualSun, aka. Sun in VR"
  ],
  "contact": {
    "homepage": "https://github.com/Sun-in-VR",
    "sources": "https://modrinth.com/mod/virtual-additions"
  },

  "license": "MIT",
  "icon": "assets/virtual_additions/icon.png",

  "environment": "*",
  "entrypoints": {
    "fabric-datagen": [
      "com.github.suninvr.virtualadditions.datagen.VirtualAdditionsDataGeneration"
    ],
    "main": [
      "com.github.suninvr.virtualadditions.VirtualAdditions"
    ],
    "client": [
      "com.github.suninvr.virtualadditions.client.VirtualAdditionsClient"
    ]
  },
  "mixins": [
    "virtual-additions.mixins.json"
  ],
  "accessWidener" : "virtualadditions.accesswidener",

  "depends": {
    "fabricloader": ">=0.15.10",
    "fabric": "*",
    "minecraft": "1.21.2",
    "java": ">=17"
  }
}
